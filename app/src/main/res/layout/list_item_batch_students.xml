<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#efefef"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/batch_students_list_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/background_corner_radius"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/batch_students_list_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_profile_person_black_24dp"
            android:layout_marginStart="7dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#50000000"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/batch_students_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:text="Naimul Hasan Naim"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textColor="@color/colorGreyDark"/>


            <TextView
                android:id="@+id/batch_students_list_academic_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:text="16CSE030"
                android:textSize="14sp"
                android:textColor="@color/colorGreyLight"
                android:layout_gravity="bottom|start"/>
        </LinearLayout>
        <TextView
            android:id="@+id/batch_students_list_userId"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="dkjlsdfj"/>


    </LinearLayout>

</RelativeLayout>